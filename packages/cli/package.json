{
  "name": "@timesheet-agent/cli",
  "version": "0.1.0",
  "description": "CLI tool for exporting and managing timesheet data",
  "bin": {
    "timesheet": "./dist/bundle.js"
  },
  "scripts": {
    "build": "tsc",
    "bundle": "esbuild src/index.ts --bundle --platform=node --target=node18 --outfile=dist/bundle.js --external:exceljs --external:inquirer",
    "dev": "tsc --watch",
    "lint": "eslint src --ext .ts",
    "clean": "rm -rf dist"
  },
  "peerDependencies": {
    "exceljs": "^4.4.0",
    "inquirer": "^8.2.6"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.7",
    "esbuild": "^0.27.2"
  }
}
