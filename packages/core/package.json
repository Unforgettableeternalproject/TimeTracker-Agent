{
  "name": "@timesheet-agent/core",
  "version": "0.1.0",
  "description": "Core logic for timesheet tracking",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc && pnpm run copy-assets",
    "copy-assets": "node -e \"require('fs').cpSync('src/db/schema.sql', 'dist/db/schema.sql', {recursive: true})\"",
    "dev": "tsc --watch",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "sql.js": "^1.10.3",
    "date-fns": "^3.0.6"
  },
  "devDependencies": {
    "@types/sql.js": "^1.4.9",
    "@types/jest": "^29.5.11",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1"
  }
}
